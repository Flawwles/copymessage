{
  "manifest_version": 2,
  "name":    "Test Extension-Matt",
  "version": "0.1",
  "offline_enabled": true,
  "description" : "Description ...",
  "icons": { "16": "img/16x16.png", "48": "img/48x48.png", "128": "img/128x128.png" },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches":    ["*://*.com/*"],
    "js":         ["content.js"],
    "run_at":     "document_idle",
    "all_frames": false
  }],

  "page_action": {
    "default_title": "Test Extension",
    //"default_icon": {
    //    "19": "img/icon19.png",
    //    "38": "img/icon38.png"
    //},
    "default_popup": "popup.html"
  },
  "permissions": [
      "storage",
      "tabs"
   ]
}
